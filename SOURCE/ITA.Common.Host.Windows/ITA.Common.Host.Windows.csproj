    <Compile Update="EtwProviderInstaller.cs">
      <SubType>Component</SubType>
    </Compile>
    <Compile Update="HostInstaller.cs">
      <SubType>Component</SubType>
    </Compile>
    <Compile Update="HostInstaller.Designer.cs">
      <DependentUpon>HostInstaller.resx</DependentUpon>
